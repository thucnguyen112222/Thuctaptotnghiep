@model IEnumerable<TTTN.Models.C_product>
@{
    ViewBag.Title = "Trash";
    Layout = "~/Areas/Admin/Views/Shared/LayoutAdmin.cshtml";
}


<div class="card">
    <div class="card-header">
        <div class="row">
            <div class="col-md-7">
                <strong class="text-danger text-uppercase">Thùng rác</strong>
            </div>
        </div>
    </div>
    <div class="card-body p-2">
        @Html.Partial("_MessageAlert")
        <table class="table table-bordered table-hover">
            <tr>
                <th>Hình ảnh</th>
                <th>Tên sản phẩm</th>
                <th>Ngày tạo</th>
                <th>ID</th>
                <th>Chức năng</th>
            </tr>
            @if (Model.Count() == 0)
            {
                <tr>
                    <td>Thùng rác rỗng</td>
                </tr>
            }
            else
            {

                foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <img src="~/wwwroot/img/@item.product_img" alt="@item.product_name" width="100" />
                        </td>
                        <td>
                            @Html.DisplayFor(model => item.product_name)
                        </td>

                        <td>
                            @Html.DisplayFor(model => item.product_createdat)
                        </td>
                        <td>
                            @Html.DisplayFor(model => item.product_id)
                        </td>
                        <td>
                            <a href="@Url.Action("ReTrash", "Product", new { id = item.product_id })" class="btn-sm btn-success">
                                <i class="fa fa-undo" aria-hidden="true"></i>
                            </a>
                            <a href="@Url.Action("Delete", "Product", new { id = item.product_id })" class="btn-sm btn-danger">
                                <i class="fa fa-trash" aria-hidden="true"></i>
                            </a>
                        </td>
                    </tr>
                }
            }
        </table>
    </div>

</div>

