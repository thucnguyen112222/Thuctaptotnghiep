@using TTTN.Models;
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/LayoutAdmin.cshtml";
}

<link href="~/Areas/Admin/wwwroot/font-awesome-4.7.0/css/font-awesome.min.css" rel="stylesheet" />
<link href="~/Content/profile_admin.css" rel="stylesheet" />
<!-- End of Topbar -->
<!-- Begin Page Content -->
<div class="container-fluid">
    @{
        var item = ViewBag.User_Profile;
    }
    <div class="container text-center">
        <div class="row profile">
            <div class="col-md-4">
                <div class="profile-sidebar">
                    <!-- SIDEBAR USERPIC -->
                    <div class="profile-userpic">
                        <img src="~/wwwroot/img/user/@item.user_img" class="img-responsive" alt="">
                    </div>
                    <!-- END SIDEBAR USERPIC -->
                    <!-- SIDEBAR USER TITLE -->
                    <div class="profile-usertitle">
                        <div class="profile-usertitle-name">
                            @item.user_fullname
                        </div>
                        <div class="profile-usertitle-job">
                            @if (item.user_access == 1)
                            {
                                <p>Admin</p>
                            }
                            @if (item.user_access == 2)
                            {
                                <p>Editor</p>
                            }
                        </div>
                    </div>
                    <!-- END SIDEBAR USER TITLE -->
                    <!-- SIDEBAR BUTTONS -->
                    <div class="profile-userbuttons">
                        <button type="button" class="btn btn-success btn-sm">Follow</button>
                        <button type="button" class="btn btn-danger btn-sm">Message</button>
                    </div>
                    <!-- END SIDEBAR BUTTONS -->
                </div>
            </div>
            <div class="col-md-8">
                @{
                    var selling_product = ViewBag.selling_products;
                    
                }
                <div class="list-group">
                    <ul>
                        <li class="list-group-item active">Sản phẩm bán chạy</li>
                        <li class="list-group-item">
                            <div class="row">
                                <div class="col-md-9">Tên sản phẩm</div>
                                <div class="col-md-3" style="border-left:1px black solid">Số Lượng</div>
                            </div>
                        </li>
                        @foreach (var i in selling_product)
                        {
                            <li class="list-group-item">
                                <div class="row">
                                    <div class="col-md-9">@i.orderdetail_name</div>
                                    <div class="col-md-3" style="border-left:1px black solid">@i.orderdetail_quanity</div>
                                </div>
                            </li>
                        }

                    </ul>
                </div>
            </div>
        </div>
    </div>

    <!-- Content Row -->
    <div class="row">

        <!-- Earnings (Monthly) Card Example -->
        <div class="col-xl-4 col-md-6 mb-4">
            <div class="card border-left-primary shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                <a href="@Url.Action("Index","Order")">Đơn hàng mới</a>
                            </div>

                            <div class="h5 mb-0 font-weight-bold text-gray-800">@ViewBag.list_order</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-calendar fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Earnings (Monthly) Card Example -->
        <div class="col-xl-4 col-md-6 mb-4">
            <div class="card border-left-success shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-success text-uppercase mb-1">Lợi nhuận (Tháng)</div>
                            @{
                                int gia = ViewBag.Gia;
                            }
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@gia.ToString("#,##0").Replace(',', '.') VNĐ</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-dollar-sign fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Earnings (Monthly) Card Example -->
        <!-- Pending Requests Card Example -->
        <div class="col-xl-4 col-md-6 mb-4">
            <div class="card border-left-warning shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                                <a href="@Url.Action("Index","Contact")">Liên hệ mới</a>
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@ViewBag.NewContact</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-comments fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-4 col-md-6 mb-4">
            <div class="card border-left-warning shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                                <a href="@Url.Action("Index","Category")">Loại sản phẩm</a>
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@ViewBag.CountCategory</div>
                        </div>
                        <div class="col-auto">
                            <i class="fa fa-table" aria-hidden="true"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-4 col-md-6 mb-4">
            <div class="card border-left-warning shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                                <a href="@Url.Action("Index","product")">Tất cả sản phẩm</a>
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@ViewBag.Countproduct</div>
                        </div>
                        <div class="col-auto">
                            <i class="fa fa-product-hunt" aria-hidden="true"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-4 col-md-6 mb-4">
            <div class="card border-left-warning shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                                <a href="@Url.Action("Index","post")">Tất cả bài viết</a>
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@ViewBag.Countpost</div>
                        </div>
                        <div class="col-auto">
                            <i class="fa fa-pencil-square-o" aria-hidden="true"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>

</div>