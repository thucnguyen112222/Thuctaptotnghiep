@model TTTN.Models.C_order

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Admin/Views/Shared/LayoutAdmin.cshtml";
}
<div class="card-header">
    <h3 class="card-title"><strong class="text-uppercase text-danger">Chi tiết đơn hàng</strong></h3>
    <div class="card-tools">
        @if (Model.order_status != 2)
        {
            <a class="btn btn-success btn-sm" href="@Url.Action("Status","Order",new {id = Model.order_id})" role="button">
                <i class="fa fa-bookmark" aria-hidden="true"></i> Xử lý
            </a>
        }

        <a class="btn btn-danger btn-sm" href="@Url.Action("Index","Order")" role="button">
            <i class="fa fa-times" aria-hidden="true"></i> Thoát
        </a>
    </div>
</div>
<div class="row container">
    <div class="col-md-4 container">
        <div class="form-group">
            <label>Mã đơn hàng</label>
            <input type="text" disabled value="@Model.order_code" class="form-control" />
        </div>
        <div class="form-group">
            <label>Tên người nhận</label>
            <input type="text" disabled value="@Model.order_name" class="form-control" />
        </div>
        <div class="form-group">
            <label>Số điện thoại</label>
            <input type="text" disabled value="@Model.order_deliveryphone" class="form-control" />
        </div>

        <div class="form-group">
            <label>Email</label>
            <input type="text" disabled value="@Model.order_email" class="form-control" />
        </div>
        <div class="form-group">
            <label>Địa chỉ nhận hàng</label>
            <input type="text" disabled value="@Model.order_deliveryaddress" class="form-control" />
        </div>
    </div>
    <div class="col-md-8">
        <br />
        @foreach (var item in ViewBag.list_product)
        {
            <br />
            <div class="row mb-3 form-group border-bottom ">
                <div class="col-md-4 text-center">
                    <img src="~/wwwroot/img/@item.orderdetail_img" alt="Alternate Text" class="image" height="150" />
                </div>
                <div class="col-md-8">
                    <h5>Tên sản phẩm: @item.orderdetail_name </h5>
                    <h5>Giá: @item.orderdetail_price.ToString("#,##0").Replace(',', '.') VNĐ</h5>
                    <h5>Số lượng: @item.orderdetail_quanity</h5>
                </div>
            </div>
        }
        <div class="form-group">
            <label>Tổng tiền</label>
            <h5> @ViewBag.Total.ToString("#,##0").Replace(',', '.') VNĐ</h5>

        </div>
    </div>
</div>