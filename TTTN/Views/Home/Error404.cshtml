
@{
    ViewBag.Title = "Error404";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>


    .error-template {
        padding: 40px 15px;
        text-align: center;
    }

    .error-actions {
        margin-top: 15px;
        margin-bottom: 15px;
    }

        .error-actions .btn {
            margin-right: 10px;
        }
</style>
<div class="container">
    <div class="row">
        <div class="col-md-12">
            <div class="error-template">
                <h2>
                    404 Not Found
                </h2>
                <div class="error-details">
                    Xin lỗi, đã xảy ra lỗi, không tìm thấy trang được yêu cầu!
                </div>
                <div class="error-actions">
                    <a href="~/" class="btn btn-primary btn-lg">
                        <span class="glyphicon glyphicon-home"></span>
                        Quay về trang chủ
                    </a>
                    <a href="@Url.Action("Create","Contacts")" class="btn btn-default btn-lg">
                        <span class="glyphicon glyphicon-envelope">
                        </span>Liên hệ hỗ trợ
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>


